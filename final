        function backToChatFromHelp() {
            const messagesContainer = document.getElementById('chatbotMessages');
            messagesContainer.innerHTML = `
                <div class="chat-message bot">
                    <div class="message-avatar bot">ü§ñ</div>
                    <div class="message-bubble">
                        Hi! I'm your AI assistant for Homepreneur Hub. I can help you find services, answer questions about our platform, or guide you through registration. What can I help you with today?
                    </div>
                </div>
            `;
            messagesContainer.scrollTop = 0;
        }

        function getAIResponse(message) {
            if (message.includes('hello') || message.includes('hi') || message.includes('hey')) {
                return "Hello! Welcome to Homepreneur Hub. How can I assist you today?";
            }
            
            if (message.includes('food') || message.includes('tiffin') || message.includes('catering')) {
                return "Great! We have amazing food service providers. You can find homemade tiffin services, catering for events, and baked goods. Would you like me to show you our top-rated food service providers in your area?";
            }
            
            if (message.includes('beauty') || message.includes('makeup') || message.includes('salon')) {
                return "We have talented beauty professionals including makeup artists, mehendi artists, and skincare specialists. Many offer at-home services! Would you like to explore our beauty services section?";
            }
            
            if (message.includes('register') || message.includes('sign up') || message.includes('join')) {
                return "Registration is easy! Just click the 'Sign Up' button at the top. You can register as a Customer to book services or as a Service Owner to offer your services. It only takes a minute!";
            }
            
            if (message.includes('price') || message.includes('cost') || message.includes('fee')) {
                return "Prices vary by service provider and location. Each provider sets their own rates. You can view pricing details on their profiles. Would you like to check out specific services?";
            }
            
            if (message.includes('help') || message.includes('support') || message.includes('contact')) {
                return "I can show you our Help Center with contact options! Click the üÜò button at the top of this chat to see phone, email, and FAQs. Or I can answer your questions right here!";
            }

            if (message.includes('thank') || message.includes('thanks')) {
                return "You're welcome! I'm here anytime you need help. Feel free to ask anything about our services or platform. üòä";
            }

            return "I'm here to help! I can assist you with finding services, learning about our platform, registration, pricing, and more. Could you tell me more specifically what you're looking for?";
        }

