        function showCategoryDetail(categoryKey) {
            const category = categoryData[categoryKey];
            if (!category) return;

            const content = document.getElementById('categoryDetailContent');
            content.innerHTML = `
                <div style="text-align: center; margin-bottom: 3rem;">
                    <div style="font-size: 5rem; margin-bottom: 1rem;">${category.icon}</div>
                    <h1 style="color: var(--primary); font-size: 2.5rem; margin-bottom: 0.5rem;">${category.title}</h1>
                    <p style="color: var(--subtle); font-size: 1.2rem;">${category.description}</p>
                </div>

                <h2 style="color: var(--primary); margin-bottom: 2rem; font-size: 2rem;">Browse Subcategories</h2>
                <div class="grid grid-3">
                    ${category.subcategories.map(sub => `
                        <div class="card" style="cursor: pointer; text-align: center;" onclick="showToast('Showing providers for ${sub.title}...', 'success')">
                            <div style="font-size: 3rem; margin-bottom: 1rem;">${sub.icon}</div>
                            <h3 class="card-title">${sub.title}</h3>
                            <p class="card-content">${sub.desc}</p>
                            <button class="btn" style="margin-top: 1rem; width: 100%;">View Providers</button>
                        </div>
                    `).join('')}
                </div>
            `;

            showSection('category-detail');
        }

        // Smart Search Functions
        function openSmartSearch() {
            document.getElementById('aiMenu').classList.remove('show');
            document.getElementById('chatbotContainer').classList.remove('show');
            document.getElementById('smartSearchContainer').style.display = 'flex';
            document.getElementById('smartSearchInput').focus();
            document.getElementById('searchResults').style.display = 'none';
            document.getElementById('smartSearchInput').value = '';
        }

        function closeSmartSearch() {
            document.getElementById('smartSearchContainer').style.display = 'none';
        }

        function performSmartSearch() {
            const searchInput = document.getElementById('smartSearchInput').value.trim();
            
            if (!searchInput) {
                showToast('Please describe what you are looking for', 'error');
                return;
            }

            const searchBtn = document.getElementById('searchBtn');
            searchBtn.disabled = true;
            searchBtn.innerHTML = 'üîÑ Analyzing...';

            setTimeout(() => {
                const results = analyzeSearchQuery(searchInput);
                displaySearchResults(results);
                searchBtn.disabled = false;
                searchBtn.innerHTML = 'üîç Search with AI';
            }, 1500);
        }

        function analyzeSearchQuery(query) {
            const lowerQuery = query.toLowerCase();
            let matchedServices = [];

            // Sample service providers with quality scores
            const serviceProviders = [
                { 
                    name: "Priya's Kitchen", 
                    category: 'food', 
                    subcategory: 'Vegetarian Tiffin',
                    icon: 'üç≤',
                    location: 'Mumbai, Andheri',
                    rating: 4.8,
                    orders: 250,
                    description: 'Fresh homemade vegetarian meals with authentic taste',
                    price: '‚Çπ120-180/meal',
                    keywords: ['food', 'tiffin', 'vegetarian', 'veg', 'meal', 'lunch', 'dinner', 'homemade', 'mumbai']
                },
                { 
                    name: "Anjali's Beauty Studio", 
                    category: 'beauty', 
                    subcategory: 'Bridal Makeup',
                    icon: 'ÔøΩÔøΩ',
                    location: 'Bangalore, Koramangala',
                    rating: 4.9,
                    orders: 180,
                    description: 'Professional bridal and party makeup artist',
                    price: '‚Çπ8,000-15,000',
                    keywords: ['beauty', 'makeup', 'bridal', 'wedding', 'party', 'mehendi', 'bangalore']
                },
                { 
                    name: "Meera's Tailoring", 
                    category: 'tailoring', 
                    subcategory: 'Custom Blouses',
                    icon: '‚úÇÔ∏è',
                    location: 'Pune, Shivaji Nagar',
                    rating: 4.7,
                    orders: 320,
                    description: 'Expert in saree blouses and custom stitching',
                    price: '‚Çπ500-1,200',
                    keywords: ['tailoring', 'blouse', 'saree', 'stitching', 'alteration', 'custom', 'pune']
                },
                { 
                    name: "Lakshmi's Home Tuitions", 
                    category: 'education', 
                    subcategory: 'School Tutoring',
                    icon: 'üìö',
                    location: 'Chennai, T Nagar',
                    rating: 4.6,
                    orders: 95,
                    description: 'Maths and Science tutor for grades 5-10',
                    price: '‚Çπ3,000-5,000/month',
                    keywords: ['tuition', 'tutoring', 'education', 'maths', 'science', 'school', 'study', 'chennai']
                },
                { 
                    name: "Radha's Craft Corner", 
                    category: 'crafts', 
                    subcategory: 'Handmade Jewelry',
                    icon: 'üé®',
                    location: 'Delhi, Lajpat Nagar',
                    rating: 4.5,
                    orders: 210,
                    description: 'Beautiful handmade earrings and necklaces',
                    price: '‚Çπ200-2,000',
                    keywords: ['craft', 'handmade', 'jewelry', 'earring', 'necklace', 'gift', 'delhi']
                },
                { 
                    name: "Sunita's Party Catering", 
                    category: 'food', 
                    subcategory: 'Event Catering',
                    icon: 'üéâ',
                    location: 'Mumbai, Bandra',
                    rating: 4.9,
                    orders: 140,
                    description: 'Catering for parties, events, and celebrations',
                    price: '‚Çπ300-500/plate',
                    keywords: ['catering', 'party', 'event', 'food', 'celebration', 'wedding', 'mumbai']
                }
            ];

            // Match services based on keywords
            serviceProviders.forEach(service => {
                let matchScore = 0;
                service.keywords.forEach(keyword => {
                    if (lowerQuery.includes(keyword)) {
                        matchScore += 15;
                    }
                });

                // Boost score based on ratings and orders
                matchScore += service.rating * 5;
                matchScore += Math.min(service.orders / 10, 20);

                if (matchScore > 20) {
                    matchedServices.push({
                        ...service,
                        matchScore: matchScore,
                        qualityPrediction: Math.min(Math.round(matchScore), 98)
                    });
                }
            });

            // Sort by match score
            matchedServices.sort((a, b) => b.matchScore - a.matchScore);

            return matchedServices.slice(0, 4);
        }

        function displaySearchResults(results) {
            const resultsDiv = document.getElementById('searchResults');
            
            if (results.length === 0) {
                resultsDiv.innerHTML = `
                    <div style="text-align: center; padding: 2rem; background: var(--card-bg); border-radius: 12px;">
                        <div style="font-size: 3rem; margin-bottom: 1rem;">üòî</div>
                        <h3 style="color: var(--primary); margin-bottom: 0.5rem;">No matches found</h3>
                        <p style="color: var(--subtle);">Try describing your requirement differently</p>
                    </div>
                `;
                resultsDiv.style.display = 'block';
                return;
            }

            resultsDiv.innerHTML = `
                <h3 style="color: var(--primary); margin-bottom: 1rem; font-size: 1.1rem;">
                    üéØ Found ${results.length} Perfect Match${results.length > 1 ? 'es' : ''}
                </h3>
                ${results.map((service, index) => `
                    <div class="card" style="margin-bottom: 1rem; padding: 1.2rem;">
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.8rem;">
                            <div style="display: flex; gap: 0.8rem; align-items: center; flex: 1;">
                                <div style="font-size: 2rem;">${service.icon}</div>
                                <div style="flex: 1;">
                                    <h4 style="color: var(--primary); margin-bottom: 0.2rem; font-size: 1rem;">${service.name}</h4>
                                    <p style="color: var(--subtle); font-size: 0.8rem; margin-bottom: 0.3rem;">üìç ${service.location}</p>
                                    <p style="color: var(--text); font-size: 0.85rem;">${service.subcategory}</p>
                                </div>
                            </div>
                            <div style="text-align: center; background: linear-gradient(135deg, ${service.qualityPrediction >= 90 ? '#7a9b5f' : service.qualityPrediction >= 75 ? '#d4a574' : '#c49a6c'} 0%, ${service.qualityPrediction >= 90 ? '#5f7a47' : service.qualityPrediction >= 75 ? '#c49a6c' : '#b88a5e'} 100%); color: white; padding: 0.5rem 0.8rem; border-radius: 12px; min-width: 70px;">
                                <div style="font-size: 1.3rem; font-weight: 700; line-height: 1;">${service.qualityPrediction}%</div>
                                <div style="font-size: 0.65rem; opacity: 0.95; margin-top: 0.1rem;">MATCH</div>
                            </div>
                        </div>
                        
                        <p style="color: var(--text); font-size: 0.85rem; margin-bottom: 0.8rem; line-height: 1.4;">${service.description}</p>
                        
                        <div style="display: flex; justify-content: space-between; align-items: center; padding-top: 0.8rem; border-top: 1px solid var(--input-border);">
                            <div style="display: flex; gap: 1rem; font-size: 0.8rem; color: var(--subtle);">
                                <span>‚≠ê ${service.rating}</span>
                                <span>üì¶ ${service.orders} orders</span>
                                <span style="color: var(--primary); font-weight: 600;">${service.price}</span>
                            </div>
                            <button class="btn btn-small" onclick="showToast('Contacting ${service.name}...', 'success')" style="font-size: 0.8rem; padding: 0.4rem 0.8rem;">
                                View Details
                            </button>
                        </div>
                    </div>
                `).join('')}
                
                <button class="btn btn-outline" onclick="openSmartSearch()" style="width: 100%; margin-top: 1rem;">
                    üîÑ New Search
                </button>
            `;
            
            resultsDiv.style.display = 'block';
        }
