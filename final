        .chatbot-messages {
            flex: 1;
            padding: 1.5rem;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            background: var(--bg);
        }

        .chat-message {
            display: flex;
            gap: 0.5rem;
            animation: message-appear 0.3s;
        }

        @keyframes message-appear {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .chat-message.user {
            flex-direction: row-reverse;
        }

        .message-avatar {
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .message-avatar.bot {
            background: var(--accent);
        }

        .message-avatar.user {
            background: var(--primary);
            color: #fff;
        }

        .message-bubble {
            max-width: 75%;
            padding: 0.8rem 1rem;
            border-radius: 12px;
            line-height: 1.5;
        }

        .chat-message.bot .message-bubble {
            background: var(--card-bg);
            color: var(--text);
            border: 1px solid var(--input-border);
        }

        .chat-message.user .message-bubble {
            background: var(--primary);
            color: #fff;
        }

        .chatbot-input-area {
            padding: 1rem 1.5rem;
            border-top: 1px solid var(--input-border);
            display: flex;
            gap: 0.5rem;
            background: var(--card-bg);
        }

        .chatbot-input {
            flex: 1;
            padding: 0.8rem 1rem;
            border: 1.5px solid var(--input-border);
            border-radius: 20px;
            background: var(--input-bg);
            color: var(--text);
            font-size: 0.95rem;
            outline: none;
            transition: border-color 0.3s;
        }

        .chatbot-input:focus {
            border-color: var(--input-focus);
        }

        .chatbot-send-btn {
            background: var(--btn-gradient);
            color: var(--primary);
            border: none;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            transition: all 0.3s;
        }

        .chatbot-send-btn:hover {
            background: var(--btn-hover);
            color: #fff;
        }

        .chatbot-send-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .typing-indicator {
            display: flex;
            gap: 0.3rem;
            padding: 0.8rem 1rem;
        }

        .typing-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: var(--subtle);
            animation: typing 1.4s infinite;
        }

        .typing-dot:nth-child(2) {
            animation-delay: 0.2s;
        }

        .typing-dot:nth-child(3) {
            animation-delay: 0.4s;
        }

        @keyframes typing {
            0%, 60%, 100% {
                transform: translateY(0);
            }
            30% {
                transform: translateY(-10px);
            }
