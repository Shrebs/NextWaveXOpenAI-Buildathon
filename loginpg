  <div class="login-container">
    <div class="login-title">Homepreneur Hub</div>
    <form id="loginForm" autocomplete="off">
      <div class="form-group">
        <label for="email">Email address</label>
        <input id="email" type="email" name="email" required placeholder="you@example.com" autocomplete="off">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" required placeholder="••••••••">
      </div>
      <div class="form-meta-row">
        <label class="remember-me">
          <input type="checkbox" id="rememberMe" name="remember"> Remember me
        </label>
        <a class="forgot-link" href="#" tabindex="0" onclick="event.preventDefault(); showToast('Password help is coming soon!')">Forgot?</a>
      </div>
      <div class="btn-row">
        <button type="submit" class="btn" id="loginBtn">Log in</button>
      </div>
    </form>
  </div>

  <div id="toast" class="toast"></div>
  <div id="previewPopup" style="display:none;"></div>

  <script>
    function showToast(msg, duration=1800) {
      const toast = document.getElementById('toast');
      toast.innerText = msg;
      toast.className = 'toast show';
      clearTimeout(toast.timer);
      toast.timer = setTimeout(()=>toast.className='toast', duration);
    }

    document.getElementById('loginBtn').addEventListener('mousedown', function(e){
      this.style.transform = 'scale(0.97)';
    });
    document.getElementById('loginBtn').addEventListener('mouseup', function(e){
      this.style.transform = '';
    });
    document.getElementById('loginBtn').addEventListener('mouseleave', function(e){
      this.style.transform = '';
    });

    function showPreview({email, name}) {
      const popupHtml = `
        <div class="preview-popup-overlay" tabindex="0">
          <div class="preview-popup" role="dialog" aria-modal="true">
            <button class="close-popup" title="Close" onclick="hidePreviewPopup()" aria-label="Close popup">&times;</button>
            <div class="preview-title">Welcome!</div>
            <ul class="preview-list">
              <li><b>Email:</b> ${email || 'Not entered'}</li>
              <li><b>Name:</b> ${name || 'Anonymous'}</li>
            </ul>
            <button class="btn" style="margin-top:0.5em" onclick="hidePreviewPopup()">Okay</button>
          </div>
        </div>
      `;
      const popup = document.getElementById('previewPopup');
      popup.innerHTML = popupHtml;
      popup.style.display = '';
      document.body.style.overflow = 'hidden';
      setTimeout(() => {
        document.querySelector('.preview-popup-overlay').focus();
      }, 10);
    }
    function hidePreviewPopup() {
      document.getElementById('previewPopup').style.display = "none";
      document.body.style.overflow = '';
    }
    document.addEventListener('keydown', function(e){
      if(e.key === "Escape") hidePreviewPopup();
    });

    function getNameFromEmail(email) {
      if (!email) return '';
      let name = email.split('@')[0].replace(/[._]/g," ");
      return name.replace(/\b\w/g, l=>l.toUpperCase());
    }

    document.getElementById('loginForm').addEventListener('submit', function(e){
      e.preventDefault();
      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value;
      const name = getNameFromEmail(email);

      if (!email || !password) {
        showToast('Please fill all fields');
        return;
      }
      showToast('Logging in…');
      setTimeout(()=>{
        showPreview({email, name});
      }, 700);
    });

    document.addEventListener('click', function(e){
      if(e.target.classList.contains('preview-popup-overlay')){
        hidePreviewPopup();
      }
    });
  </script>
</body>
</html>
