  <script>
    const defaultConfig = {
      home_title: "üçÇ Tiffin and Food Services",
      home_subtitle: "Fresh, homemade meals delivered to your door",
      daily_meals_title: "Daily Fresh Meals",
      weekly_calendar_title: "Weekly Calendar",
      plans_title: "Weekly/Monthly Plans",
      custom_menu_title: "Customizable Menu",
      primary_color: "#ea580c",
      secondary_color: "#c2410c",
      background_color: "#fef3c7",
      surface_color: "#fed7aa",
      text_color: "#78350f"
    };

    let customMeals = [];

    const dataHandler = {
      onDataChanged(data) {
        customMeals = data;
        renderCustomMeals();
      }
    };

    async function initializeApp() {
      if (window.dataSdk) {
        const initResult = await window.dataSdk.init(dataHandler);
        if (!initResult.isOk) {
          console.error("Failed to initialize data SDK");
        }
      }

      if (window.elementSdk) {
        await window.elementSdk.init({
          defaultConfig,
          onConfigChange: async (config) => {
            document.getElementById('home-title').textContent = config.home_title || defaultConfig.home_title;
            document.getElementById('home-subtitle').textContent = config.home_subtitle || defaultConfig.home_subtitle;
            document.getElementById('daily-card-title').textContent = config.daily_meals_title || defaultConfig.daily_meals_title;
            document.getElementById('weekly-card-title').textContent = config.weekly_calendar_title || defaultConfig.weekly_calendar_title;
            document.getElementById('plans-card-title').textContent = config.plans_title || defaultConfig.plans_title;
            document.getElementById('custom-card-title').textContent = config.custom_menu_title || defaultConfig.custom_menu_title;

            const primaryColor = config.primary_color || defaultConfig.primary_color;
            const secondaryColor = config.secondary_color || defaultConfig.secondary_color;
            const backgroundColor = config.background_color || defaultConfig.background_color;
            const surfaceColor = config.surface_color || defaultConfig.surface_color;
            const textColor = config.text_color || defaultConfig.text_color;

            document.body.style.background = `linear-gradient(135deg, ${backgroundColor} 0%, ${surfaceColor} 100%)`;
            
            const headers = document.querySelectorAll('.header h1');
            headers.forEach(h => h.style.color = textColor);

            const planCards = document.querySelectorAll('.plan-card');
            planCards.forEach(card => {
              card.style.background = `linear-gradient(135deg, ${primaryColor} 0%, ${secondaryColor} 100%)`;
            });

            const submitBtn = document.querySelector('.submit-btn');
            if (submitBtn) {
              submitBtn.style.background = primaryColor;
            }
          },
          mapToCapabilities: (config) => ({
            recolorables: [
              {
                get: () => config.background_color || defaultConfig.background_color,
                set: (value) => {
                  if (window.elementSdk && window.elementSdk.config) {
                    window.elementSdk.config.background_color = value;
                    window.elementSdk.setConfig({ background_color: value });
                  }
                }
              },
              {
                get: () => config.surface_color || defaultConfig.surface_color,
                set: (value) => {
                  if (window.elementSdk && window.elementSdk.config) {
                    window.elementSdk.config.surface_color = value;
                    window.elementSdk.setConfig({ surface_color: value });
                  }
                }
              },
              {
                get: () => config.text_color || defaultConfig.text_color,
                set: (value) => {
                  if (window.elementSdk && window.elementSdk.config) {
                    window.elementSdk.config.text_color = value;
                    window.elementSdk.setConfig({ text_color: value });
                  }
                }
              },
              {
                get: () => config.primary_color || defaultConfig.primary_color,
                set: (value) => {
                  if (window.elementSdk && window.elementSdk.config) {
                    window.elementSdk.config.primary_color = value;
                    window.elementSdk.setConfig({ primary_color: value });
                  }
                }
              },
              {
                get: () => config.secondary_color || defaultConfig.secondary_color,
                set: (value) => {
                  if (window.elementSdk && window.elementSdk.config) {
                    window.elementSdk.config.secondary_color = value;
                    window.elementSdk.setConfig({ secondary_color: value });
                  }
                }
              }
            ],
            borderables: [],
            fontEditable: undefined,
            fontSizeable: undefined
          }),
          mapToEditPanelValues: (config) => new Map([
            ["home_title", config.home_title || defaultConfig.home_title],
            ["home_subtitle", config.home_subtitle || defaultConfig.home_subtitle],
            ["daily_meals_title", config.daily_meals_title || defaultConfig.daily_meals_title],
            ["weekly_calendar_title", config.weekly_calendar_title || defaultConfig.weekly_calendar_title],
            ["plans_title", config.plans_title || defaultConfig.plans_title],
            ["custom_menu_title", config.custom_menu_title || defaultConfig.custom_menu_title]
          ])
        });
      }
    }

    function navigateTo(pageId) {
      document.querySelectorAll('.page').forEach(page => {
        page.classList.remove('active');
      });
      document.getElementById(pageId).classList.add('active');
      window.scrollTo(0, 0);
    }

    function showToast(message) {
      const toast = document.getElementById('success-toast');
      toast.textContent = message;
      toast.classList.add('show');
      setTimeout(() => {
        toast.classList.remove('show');
      }, 3000);
    }

    function showPlanToast(planName) {
      showToast(`${planName} selected! üçÇ We'll contact you to set up your subscription.`);
    }

    function renderCustomMeals() {
      const container = document.getElementById('custom-meals-list');
      if (customMeals.length === 0) {
        container.innerHTML = '';
        return;
      }

      container.innerHTML = '<h3 style="color: #78350f; margin-top: 48px; margin-bottom: 24px; font-size: 24px;">Your Custom Meals</h3>';
      
      customMeals.forEach(meal => {
        const mealDiv = document.createElement('div');
        mealDiv.className = 'custom-meal-item';
        mealDiv.innerHTML = `
          <p class="meal-time" style="margin: 0 0 8px 0;">${meal.meal_type}</p>
          <h4 class="custom-meal-name">${meal.meal_name}</h4>
          <p class="custom-meal-desc">${meal.meal_description}</p>
        `;
        container.appendChild(mealDiv);
      });
    }

    async function handleCustomMealSubmit(e) {
      e.preventDefault();

      if (customMeals.length >= 999) {
        showToast("Maximum limit of 999 meals reached. Please contact support.");
        return;
      }

      const submitBtn = document.getElementById('submit-meal-btn');
      const submitText = document.getElementById('submit-text');
      submitBtn.disabled = true;
      submitText.innerHTML = 'Adding Meal<span class="loading"></span>';

      const mealData = {
        id: Date.now().toString(),
        meal_name: document.getElementById('meal-name').value.trim(),
        meal_description: document.getElementById('meal-description').value.trim(),
        meal_type: document.getElementById('meal-type').value,
        created_at: new Date().toISOString()
      };

      if (window.dataSdk) {
        const result = await window.dataSdk.create(mealData);
        
        submitBtn.disabled = false;
        submitText.textContent = 'Add Custom Meal';

        if (result.isOk) {
          showToast('Custom meal added successfully! üçÇ');
          document.getElementById('custom-meal-form').reset();
        } else {
          showToast('Failed to add meal. Please try again.');
        }
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      initializeApp();
      document.getElementById('custom-meal-form').addEventListener('submit', handleCustomMealSubmit);
    });
